<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DetallesEventoActivity">

    <TextView
        style="@style/AppTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Detalles Evento" />

    <TextView
        android:id="@+id/txt_eventoTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo Evento"
        android:layout_marginBottom="10dp"
        android:textSize="18dp"
        android:textAlignment="textStart" />

    <fragment
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginBottom="10dp"
        android:layout_width="314dp"
        android:layout_height="397dp" />

    <TextView
        android:id="@+id/txt_eventoFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha Evento"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart" />

    <TextView
        android:id="@+id/txt_eventoDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion Evento"
        android:textAlignment="textStart" />


</LinearLayout>